<mujoco model="g1_5fingers_office_scene">
  <compiler angle="radian" autolimits="true"/>
  
  <option timestep="0.002" gravity="0 0 -9.81" cone="elliptic" jacobian="dense" solver="Newton" iterations="50"/>
  
  <statistic center="0 0 2" extent="20"/>
  
  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-130" elevation="-20"/>
  </visual>
  
  <asset>
    <!-- Assets do ambiente -->
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="wall" rgba="0.9 0.9 0.9 1" specular="0.1"/>
    
    <!-- Paredes do escritório -->
    <mesh name="office_walls" file="3d escritorio/body1_structure/body1_structure.obj" scale="0.01 0.01 0.01"/>
  </asset>
  
  <worldbody>
    <!-- Iluminação -->
    <light pos="0 0 10" dir="0 0 -1" directional="true"/>
    <light pos="10 10 8" dir="-1 -1 -1" directional="false"/>
    
    <!-- Chão do escritório -->
    <geom name="floor" size="50 50 0.05" type="plane" material="groundplane"/>
    
    <!-- Paredes do escritório -->
    <body name="walls" pos="-5.73 -7.00 0">
      <geom name="office_walls_geom" mesh="office_walls" type="mesh" contype="1" conaffinity="1" material="wall"/>
    </body>
    
    <!-- Incluir o G1 de 5 dedos convertido - ajuste a posição conforme necessário -->
    <!-- Após converter o URDF para XML, substitua esta linha pelo include do arquivo convertido -->
    <!-- <include file="g1_5fingers_converted.xml"/> -->
    
    <!-- Por enquanto, marcador visual do robô -->
    <body name="robot_placeholder" pos="0 0 0.80">
      <geom name="placeholder" type="box" size="0.1 0.1 0.5" rgba="1 0 0 0.5"/>
      <site name="info" pos="0 0 1" size="0.1" rgba="1 1 0 1"/>
    </body>
  </worldbody>
</mujoco>